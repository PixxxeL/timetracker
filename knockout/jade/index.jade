extends base.jade

block content
    #content-wrapper
        .title-container
            .buttons
                select.select-project(data-bind="visible: isSelectProject, options: titles, value: current, click: selectProjectClick" autocomplete="off")
                a.swap-project(data-bind="click: toggleSelectProject" href="#" title="Сменить проект")
                    i.fa.fa-list
                a.add-project(data-bind="click: addProject" href="#" title="Добавить проект")
                    i.fa.fa-plus
                a.remove-project(data-bind="click: removeProject" href="#" title="Удалить проект")
                    i.fa.fa-minus
            h1
                | Time Tracker
                span.project-name
        .timer-container
            a.btn(href="#" title="Таймер")
                i.fa.fa-play
            a.label(href="#" title="Таймер") 0:00:00
            .total-time
                | Всего времени в проекте: #[span.total.value 0:00:00]
                br
                | не учтенного: #[span.opened.value 0:00:00]
        .times
            .empty Пока нет учтенного времени
            table.results
                thead
                    tr
                        th Учтено
                        th Начало
                        th Завершение
                        th Пояснение
                        th Всего
                        th
                tbody
